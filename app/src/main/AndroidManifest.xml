<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.astrology">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/astrology_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/astrology_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Astrology"
        tools:targetApi="31">
        <activity
            android:name=".AllActivity.AstrologerProfileActivity"
            android:exported="false" />
        <activity
            android:name=".AllActivity.NameAndDOBActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AllActivity.KundliMatchingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AllActivity.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AllActivity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginModules.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginModules.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AllActivity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>